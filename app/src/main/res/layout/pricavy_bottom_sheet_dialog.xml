<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg_shape"
    app:behavior_hideable="true"
    app:behavior_peekHeight="16dp"
    app:layout_behavior="com.google.android.material.bottomSheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_bottomSheet_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_bottomSheet_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_bottomSheet_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/l_rem_ipsum_as_lyde_kada_euerot_posnt_it_krig_pseudobel_polingar_sohet_dip_sk_be_rung_s_triling_mikror_nerar_l_rem_ipsum_as_lyde_kada_eurot_post_it_krig_pseudobel_polingar_sohet_dip_sk_berung_s_triling_mikror_nerar"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottomSheet_1"
        app:layout_constraintBottom_toTopOf="@+id/tv_bottomSheet_3"
        />

    <TextView
        android:id="@+id/tv_bottomSheet_3"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/get_start_shape1"
        android:gravity="center"
        android:textColor="@color/blue"
        android:text="@string/accept_and_continue"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:textSize="@dimen/_18sdp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottomSheet_2" />


</androidx.constraintlayout.widget.ConstraintLayout>
